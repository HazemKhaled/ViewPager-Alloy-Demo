<Alloy>
	<ListView id="list" defaultItemTemplate="template1">
		<Templates>
			<ItemTemplate name="template1" height="100">
				<ImageView bindId="image" id="image"/>
				<Label bindId="label" id="label1"/>
			</ItemTemplate>
			<ItemTemplate name="template2" height="50">
				<Label bindId="text" />
				<ImageView bindId="image" />
			</ItemTemplate>
			<ItemTemplate name="requiredTemplate" height="70">
				<ImageView id="leftImage" bindId="leftImage"/>
				<Label id="title" bindId="title"/>
				<Label id="subtitle" bindId="subtitle"/>
				<ImageView id="rightImage" bindId="rightImage"/>
			</ItemTemplate>
		</Templates>
	</ListView>
</Alloy>
